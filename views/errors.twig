{% if errors|length > 0 %}
<div class="alert alert-danger">
    <ul>
        {% for field, errors in errors %}
            <li>{{ field }}
                <ul>
                    {% for error in errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
</div>
{% endif %}